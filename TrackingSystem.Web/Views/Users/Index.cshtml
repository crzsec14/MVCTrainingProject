@model IEnumerable<TrackingSystem.Data.Models.User>


@{
    ViewBag.Title = "Index";
}

<div style="margin-top: 3%">
    <h4>Index</h4>
</div>
<div class="form-group">
    @Html.ActionLink("Create New", "Create")
    <form asp-controller="Users" class="float-right form-group">
        <div class="input-group">
            <input type="text" name="item" class="form-control">
            <input type="submit" value="Search" class="btn btn-dark" />
        </div>
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
            <a href="#">
                <span class="glyphicon glyphicon-sort"></span>
            </a>
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.UserType)
            <a href="#">
                <span class="glyphicon glyphicon-sort"></span>
            </a>
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Attempts)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
            <a href="#">
                <span class="glyphicon glyphicon-sort"></span>
            </a>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
                <a href="#">
                    <span class="glyphicon glyphicon-sort"></span>
                </a>
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserType)

            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Attempts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script type="text/javascript">
        @Html.Raw(ViewBag.SweetAlertShowMessage)
    </script>
}